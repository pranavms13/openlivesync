{
  "name": "openlivesync",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "dev": "npm install --prefix examples/server && npm install --prefix examples/client && concurrently -n server,client \"npm run dev --prefix examples/server\" \"npm run dev --prefix examples/client\"",
    "lint": "eslint .",
    "prepare": "husky",
    "version": "node scripts/version-workspaces.js",
    "postversion": "node scripts/postversion-amend.js"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@eslint/js": "^10.0.0",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": "eslint",
    "packages/*/*.ts": "eslint"
  }
}
