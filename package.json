{
  "name": "openlivesync",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": "eslint",
    "packages/*/*.ts": "eslint"
  }
}
